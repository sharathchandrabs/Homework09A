<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/friendsProfileImageViewAR"
        android:layout_width="73dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/frdsTxtVwAR"
        android:layout_width="246dp"
        android:layout_height="match_parent"
        android:layout_weight="0.80" />

    <ImageButton
        android:id="@+id/imageButtonaddAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher_add" />

    <ImageButton
        android:id="@+id/imageButtoncancelAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher_cancel" />


</LinearLayout>